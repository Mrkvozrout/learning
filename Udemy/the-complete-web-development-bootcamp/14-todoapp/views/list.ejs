<%- include('_header') -%>
  
  <div id="heading" class="box">
    <h1><%= day %></h1>
  </div>

  <div class="box">
    <% items.forEach(item => { %>
      <div class="item">
        <input type="checkbox">
        <p><%= item %></p>
      </div>
    <% }) %>
    
    <form class="item" action="/", method="post">
      <input type="text" name="newItem" placeholder="New item" autocomplete="off">
      <button type="submit">+</button>
    </form>
  </div>

<%- include('_footer') -%>
