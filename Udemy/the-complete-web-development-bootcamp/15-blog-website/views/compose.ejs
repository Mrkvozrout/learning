<%- include('partials/header') -%>

<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="postTitle" class="col">Title</label>
    <input id="postTitle" type="text" name="title" autocomplete="off" autofocus class="form-control">
  </div>
  
  <div class="form-group">
    <label for="postText" class="col">Post</label>
    <textarea id="postText" name="text" cols="30" rows="10" class="form-control"></textarea>
  </div>
  
  <button type="submit" class="btn btn-primary" class="col">Publish</button>
</form>

<%- include('partials/footer') -%>